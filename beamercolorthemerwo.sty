\RequirePackage{tango}

% inherit from Copenhagen theme subthemes
\usecolortheme{whale}
\usecolortheme{orchid}

%% define the RWO CI colors
\definecolor{greycolor}{rgb}{0.8,0.8,0.8}
\definecolor{darkgreycolor}{rgb}{0.4,0.4,0.4}
\definecolor{logoyellow}{rgb}{1,1,1}
\definecolor{logoblue}{RGB}{182,62,151}

\setbeamercolor{palette primary}{bg=logoblue,fg=logoyellow}
\setbeamercolor{palette secondary}{bg=logoyellow,fg=logoblue}
\setbeamercolor{palette tertiary}{bg=logoblue,fg=logoyellow}
\setbeamercolor{palette quaternary}{bg=logoyellow,fg=logoblue}

\setbeamercolor{block title}{bg=plumB,fg=aluminiumA}
\setbeamercolor{block title alerted}{bg=scarletredB,fg=white}
\setbeamercolor{block body alerted}{bg=scarletredB!30!white,fg=aluminiumF}

\setbeamercolor{block title example}{bg=chameleonC,fg=white}
\setbeamercolor{block body example}{bg=chameleonC!30!white,fg=aluminiumF}

\setbeamercolor{author in head/foot}{fg=aluminiumD,bg=white}
\setbeamercolor{title in head/foot}{fg=aluminiumD,bg=white}
\setbeamercolor{frametitle}{fg=plumC,bg=white}

\setbeamercolor{itemize item}{fg=skyblueB}

\setbeamercolor{normal text}{fg=aluminiumF}
\setbeamercolor{alerted text}{fg=scarletredA}